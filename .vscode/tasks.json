{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Validate Terraform Configuration",
			"type": "shell",
			"command": "terraform",
			"args": ["validate"],
			"options": {
				"cwd": "${workspaceFolder}/environments/dev"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Format Terraform Code",
			"type": "shell",
			"command": "terraform",
			"args": ["fmt", "-recursive"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Run Terraform Tests",
			"type": "shell",
			"command": "terraform",
			"args": ["test"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "Run Security Validation Tests",
			"type": "shell",
			"command": "terraform",
			"args": ["test", "-file=tests/security-validation.tftest.hcl", "-verbose"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": false,
			"problemMatcher": [],
			"group": "test"
		}
	]
}